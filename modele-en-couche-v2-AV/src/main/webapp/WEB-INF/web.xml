<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee 
		 http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
	version="3.1">
	<display-name>Ma super application en couches !</display-name>

	<servlet>
		<servlet-name>ViewsServlet</servlet-name>
		<servlet-class>presentation.ViewsServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>NewClientServlet</servlet-name>
		<servlet-class>presentation.NewClientServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>ViewsServlet</servlet-name>
		<url-pattern>*.html</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>NewClientServlet</servlet-name>
		<url-pattern>*.do</url-pattern>
	</servlet-mapping>
	<context-param>
		<description>Configuration Spring: indiquer l'emplacement du fichier de
		configuration spring-beans definissant l'application context.</description>
		<param-name>contextConfigLocation</param-name>
		<param-value>classpath:///spring-dispatcher-servlet.xml</param-value>
	</context-param>
	
	<filter>
		<filter-name>Force UTF8 Filter</filter-name>
		<filter-class>org.springframework.web.filter.CharacterEncodingFilter</filter-class>
		<init-param>
			<param-name>forceEncoding</param-name>
			<param-value>true</param-value>
		</init-param>
		<init-param>
			<param-name>encoding</param-name>
			<param-value>UTF-8</param-value>
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>Force UTF8 Filter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	
	
	<listener>
		<listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
	</listener>
</web-app>